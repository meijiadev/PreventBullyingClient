<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_165"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10">

    <com.hjq.shape.layout.ShapeRelativeLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        app:shape_radius="@dimen/dp_15"
        app:shape_solidColor="@color/device_online">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:text="校园防欺凌设备 AM100"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_tv"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:text="惠州一中|二楼综合办公室"
            android:textSize="@dimen/sp_11" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sn_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_tv"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:text="SN-1234647659687080"
            android:textSize="@dimen/sp_11" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sn_tv"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:text="在   线"
            android:textSize="@dimen/sp_13" />


        <!--        <androidx.appcompat.widget.AppCompatImageView-->
        <!--            android:id="@+id/device_iv"-->
        <!--            android:layout_width="@dimen/dp_60"-->
        <!--            android:layout_height="@dimen/dp_60"-->
        <!--            android:layout_below="@id/sn_tv"-->
        <!--            android:layout_marginStart="@dimen/dp_10"-->
        <!--            android:layout_marginTop="@dimen/dp_5"-->
        <!--            android:src="@mipmap/ic_launcher_round" />-->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/amend_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_toLeftOf="@id/delete_iv"
            android:scaleType="center"
            android:src="@mipmap/amend_icon"

            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/delete_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:scaleType="center"
            android:src="@mipmap/delete_icon" />

    </com.hjq.shape.layout.ShapeRelativeLayout>
</FrameLayout>