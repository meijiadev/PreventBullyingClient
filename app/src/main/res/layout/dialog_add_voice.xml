<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <com.hjq.shape.layout.ShapeRelativeLayout
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_180"
        app:shape_radius="@dimen/dp_15"
        app:shape_solidColor="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:text="新增语音文案" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/voice_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:layout_below="@id/title_tv"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="语音文案："
            android:textSize="@dimen/sp_13" />

        <com.hjq.shape.view.ShapeEditText
            android:id="@+id/voice_text_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_below="@id/title_tv"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_toRightOf="@id/voice_text"
            android:hint="请输入语音播报文案"
            android:paddingStart="@dimen/dp_10"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/black"
            app:shape_radius="@dimen/dp_5"
            app:shape_strokeColor="@color/common_line_color"
            app:shape_strokeWidth="@dimen/dp_1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:layout_below="@id/voice_text"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="播报次数："
            android:textSize="@dimen/sp_13" />

        <com.hjq.shape.view.ShapeEditText
            android:id="@+id/play_times_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_below="@id/voice_text_et"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_toRightOf="@id/time_text"
            android:gravity="center"
            android:inputType="number"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/black"
            android:text="1"
            android:textSize="@dimen/sp_13"
            app:shape_radius="@dimen/dp_5"
            app:shape_strokeColor="@color/common_line_color"
            app:shape_strokeWidth="@dimen/dp_1" />

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/cancel_tv"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_13"
            app:shape_radius="@dimen/dp_15"
            app:shape_strokeColor="@color/common_line_color"
            app:shape_strokeWidth="@dimen/dp_1" />

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/confirm_tv"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_13"
            app:shape_radius="@dimen/dp_15"
            app:shape_solidColor="@color/gold" />

    </com.hjq.shape.layout.ShapeRelativeLayout>


</FrameLayout>