            android:text="报警时间："
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_12"
            app:layout_constraintStart_toEndOf="@id/text_tv"
            app:layout_constraintTop_toBottomOf="@id/sn_tv" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/waring_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:text="2023-12-25 19:35:04"
            android:textSize="@dimen/sp_13"
            app:layout_constraintStart_toEndOf="@id/text_tv"
            app:layout_constraintTop_toBottomOf="@id/text_2_tv" />

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/call_tv"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_10"
