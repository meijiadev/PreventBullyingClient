            android:textSize="@dimen/sp_13"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:shape_radius="@dimen/dp_10"
            app:shape_strokeColor="@color/gray"
            app:shape_strokeWidth="@dimen/dp_1" />

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/play_tv"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center"
            android:text="播放"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/call_tv"
            app:shape_radius="@dimen/dp_13"
            app:shape_strokeColor="@color/gray"
            app:shape_strokeWidth="@dimen/dp_1"/>

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/process_bt"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center"
            android:text="处理"
            android:textSize="@dimen/sp_13"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/play_tv"
            app:shape_radius="@dimen/dp_10"
            app:shape_strokeColor="@color/gray"
            app:shape_strokeWidth="@dimen/dp_1"
