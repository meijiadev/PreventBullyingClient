<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_line_color"
    tools:context=".ui.activity.MainActivity">

    <RelativeLayout
        android:id="@+id/title_ly"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal">
            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="消息通知"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                app:shape_solidColor="@color/white70" />
            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/dev_server_iv"
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_5"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_5"
                app:shape_radius="@dimen/dp_20"
                app:shape_solidColor="@color/gold" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/spread_iv"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/xl_icon"
                android:layout_marginStart="@dimen/dp_5"
                />
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/add_device"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:onClick="onExit"
            android:scaleType="centerCrop"
            android:src="@mipmap/add_icon"
            android:visibility="visible" />
    </RelativeLayout>


    <androidx.fragment.app.FragmentContainerView
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:id="@+id/navHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:navGraph="@navigation/nav_graph_main"
        app:defaultNavHost="false"
        android:layout_above="@id/layout_bottom"
        android:layout_below="@id/title_ly" />

    <com.hjq.shape.layout.ShapeLinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        app:shape_solidColor="@color/white70"
        app:shape_topLeftRadius="@dimen/dp_20"
        app:shape_topRightRadius="@dimen/dp_20">

        <LinearLayout
            android:id="@+id/message_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_weight="1"
            android:onClick="onMessage"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/message_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/message_icon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="消息" />
        </LinearLayout>

        <!--        <LinearLayout-->
        <!--            android:id="@+id/add_device_ll"-->
        <!--            android:layout_width="@dimen/dp_60"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:layout_centerHorizontal="true"-->

        <!--            android:orientation="vertical">-->

        <!--            <androidx.appcompat.widget.AppCompatImageView-->
        <!--                android:id="@+id/add_dev_iv"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="@dimen/dp_30"-->
        <!--                android:layout_marginTop="@dimen/dp_10"-->
        <!--                android:src="@mipmap/add_icon" />-->

        <!--            <androidx.appcompat.widget.AppCompatTextView-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_marginTop="@dimen/dp_2"-->
        <!--                android:gravity="center"-->
        <!--                android:text="添加设备" />-->
        <!--        </LinearLayout>-->


        <LinearLayout
            android:id="@+id/device_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_weight="1"
            android:onClick="onDevice"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/device_manager_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/device_icon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="设备" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/keyword_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onKeyword"
            android:layout_marginStart="@dimen/dp_15"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/keyword_manager_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/keyword_icon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="关键词" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mine_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_weight="1"
            android:onClick="onMine"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/mine_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/mine_icon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="我的" />

        </LinearLayout>

    </com.hjq.shape.layout.ShapeLinearLayout>


</RelativeLayout>