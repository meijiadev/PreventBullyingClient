<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_ll"
        layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_ll">

        <com.hjq.shape.layout.ShapeLinearLayout
            android:id="@+id/keyword_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="horizontal"
            app:shape_radius="@dimen/dp_12"
            app:shape_solidColor="@color/white">

            <EditText
                android:id="@+id/keyword_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入关键词"
                android:textColor="@color/black"
                android:maxLength="6"
                android:paddingStart="@dimen/dp_8"
                android:singleLine="true"
                android:textSize="@dimen/sp_13" />

        </com.hjq.shape.layout.ShapeLinearLayout>

        <com.hjq.shape.layout.ShapeLinearLayout
            android:id="@+id/org_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_below="@id/keyword_ll"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="horizontal"
            app:shape_radius="@dimen/dp_12"
            app:shape_solidColor="@color/gray_2">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/org_list_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_2"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_18"
                android:textSize="@dimen/sp_13" />

        </com.hjq.shape.layout.ShapeLinearLayout>


        <com.hjq.shape.layout.ShapeLinearLayout
            android:id="@+id/official_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_below="@id/org_ll"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="horizontal"
            app:shape_radius="@dimen/dp_12"
            app:shape_solidColor="@color/white">

            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/official_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="请选择干预文案（必填）"
                android:paddingStart="@dimen/dp_8"
                android:textSize="@dimen/sp_13" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/type_enter_iv"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:scaleType="center"
                android:src="@mipmap/enter" />
        </com.hjq.shape.layout.ShapeLinearLayout>


        <LinearLayout
            android:id="@+id/level_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_below="@id/official_ll"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="预警等级:"
                android:textSize="@dimen/sp_15"

                />

            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/serious_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="center"
                android:text="严重"
                android:textSize="@dimen/sp_15"
                app:shape_radius="@dimen/dp_15"
                app:shape_solidColor="@color/white" />

            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/common_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_weight="1"
                android:gravity="center"
                android:text="一般"
                android:textSize="@dimen/sp_15"
                app:shape_radius="@dimen/dp_15"
                app:shape_solidColor="@color/gold" />

            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/slight_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_weight="1"
                android:gravity="center"
                android:text="轻微"
                android:textSize="@dimen/sp_15"
                app:shape_radius="@dimen/dp_15"
                app:shape_solidColor="@color/white" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/query_iv"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/query_icon" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/sensitivity_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_below="@id/level_ll"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="灵敏度 :   "
                android:textSize="@dimen/sp_15"

                />

            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/accuracy_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="center"
                android:text="准确"
                android:textSize="@dimen/sp_15"
                app:shape_radius="@dimen/dp_15"
                app:shape_solidColor="@color/white" />

            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/common_sensitivity_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_weight="1"
                android:gravity="center"
                android:text="一般"
                android:textSize="@dimen/sp_15"
                app:shape_radius="@dimen/dp_15"
                app:shape_solidColor="@color/gold" />

            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/fast_sensitivity_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_weight="1"
                android:gravity="center"
                android:text="快捷"
                android:textSize="@dimen/sp_15"
                app:shape_radius="@dimen/dp_15"
                app:shape_solidColor="@color/white" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/query_s_iv"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/query_icon" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/seekbar_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sensitivity_ll"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/seekbar_sen"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/number_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_20"
                android:gravity="center_vertical"
                android:text="1000"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@id/seekbar_ll"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="是否启用："
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_15" />

        <com.sjb.base.view.SwitchButton
            android:id="@+id/enable_bt"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@id/seekbar_ll"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/text" />


        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/confirm_tv"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_30"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            app:shape_radius="@dimen/dp_15"
            app:shape_solidColor="@color/gold" />

    </RelativeLayout>


</RelativeLayout>