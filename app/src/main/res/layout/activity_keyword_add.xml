<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_ll"
        layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_ll">

        <com.hjq.shape.layout.ShapeLinearLayout
            android:id="@+id/keyword_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="horizontal"
            app:shape_radius="@dimen/dp_12"
            app:shape_solidColor="@color/white">

            <EditText
                android:id="@+id/keyword_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入关键词"
                android:paddingStart="@dimen/dp_8"
                android:textSize="@dimen/sp_13" />

        </com.hjq.shape.layout.ShapeLinearLayout>

        <com.hjq.shape.layout.ShapeLinearLayout
            android:id="@+id/org_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_below="@id/keyword_ll"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="horizontal"
            app:shape_radius="@dimen/dp_12"
            app:shape_solidColor="@color/gray_2">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/org_list_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_2"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_18"
                android:textSize="@dimen/sp_13" />

        </com.hjq.shape.layout.ShapeLinearLayout>


        <com.hjq.shape.layout.ShapeLinearLayout
            android:id="@+id/official_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_below="@id/org_ll"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="horizontal"
            app:shape_radius="@dimen/dp_12"
            app:shape_solidColor="@color/white">

            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/official_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="请选择干预文案（必填）"
                android:paddingStart="@dimen/dp_8"
                android:textSize="@dimen/sp_13" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/type_enter_iv"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:scaleType="center"
                android:src="@mipmap/enter" />
        </com.hjq.shape.layout.ShapeLinearLayout>


        <com.hjq.shape.view.ShapeEditText
            android:id="@+id/location_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_below="@id/official_ll"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:hint="请输入位置（必填）"
            android:paddingStart="@dimen/dp_8"
            android:textSize="@dimen/sp_13"
            app:shape_radius="@dimen/dp_12"
            app:shape_solidColor="@color/white"
            app:shape_strokeWidth="@dimen/dp_1" />

        <com.hjq.shape.layout.ShapeLinearLayout
            android:id="@+id/level_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_below="@id/official_ll"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="horizontal"
            app:shape_radius="@dimen/dp_12"
            app:shape_solidColor="@color/white">

            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/level_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="请选择预警等级（必填）"
                android:paddingStart="@dimen/dp_8"
                android:textSize="@dimen/sp_13" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/level_enter_iv"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:src="@mipmap/enter" />
        </com.hjq.shape.layout.ShapeLinearLayout>



        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/confirm_tv"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_30"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            app:shape_radius="@dimen/dp_15"
            app:shape_solidColor="@color/gold" />

    </RelativeLayout>


</RelativeLayout>