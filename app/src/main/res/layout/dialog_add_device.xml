        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/org_text_tv"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/sn_ll"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center|right"
            android:textSize="@dimen/sp_15"
            android:text="所属组织" />

        <com.hjq.shape.layout.ShapeLinearLayout
            android:id="@+id/org_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_alignBottom="@id/org_text_tv"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_toRightOf="@id/org_text_tv"
            android:orientation="horizontal"
            app:shape_radius="@dimen/dp_10"
            app:shape_strokeColor="@color/common_line_color"
            app:shape_strokeWidth="@dimen/dp_1">

            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/org_list_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_margin="@dimen/dp_2"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="请选择组织（必填）"
                android:textColor="@color/black"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_18"
                android:textSize="@dimen/sp_13" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/org_enter_iv"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:scaleType="center"
                android:src="@mipmap/enter" />
        </com.hjq.shape.layout.ShapeLinearLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dev_type_text_tv"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/org_ll"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center|right"
            android:textSize="@dimen/sp_15"
            android:text="设备型号" />
        <com.hjq.shape.layout.ShapeLinearLayout
            android:id="@+id/dev_type_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_alignBottom="@id/dev_type_text_tv"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_toRightOf="@id/dev_type_text_tv"
            android:orientation="horizontal"
            app:shape_radius="@dimen/dp_10"
            app:shape_strokeColor="@color/common_line_color"
            app:shape_strokeWidth="@dimen/dp_1">
            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/dev_type_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:hint="请选择设备型号（必填）"
                android:textColor="@color/black"
                android:paddingStart="@dimen/dp_8"
                android:textSize="@dimen/sp_13"
                android:layout_weight="1"
               />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/type_enter_iv"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/enter"
                android:scaleType="center"
                />
        </com.hjq.shape.layout.ShapeLinearLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/location_text_tv"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/dev_type_ll"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center|right"
            android:textSize="@dimen/sp_15"
            android:text="所属位置" />

        <com.hjq.shape.view.ShapeEditText
            android:id="@+id/location_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_alignBottom="@id/location_text_tv"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_toRightOf="@id/location_text_tv"
            android:hint="请输入位置（必填）"
            android:paddingStart="@dimen/dp_8"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/black"
            app:shape_radius="@dimen/dp_10"
            app:shape_strokeColor="@color/common_line_color"
            app:shape_strokeWidth="@dimen/dp_1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/des_text_tv"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/location_et"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center|right"
            android:textSize="@dimen/sp_15"
            android:text="描述" />

        <com.hjq.shape.view.ShapeEditText
            android:id="@+id/des_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_alignBottom="@id/des_text_tv"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_toRightOf="@id/des_text_tv"
            android:hint="请输入描述(非必填)"
            android:paddingStart="@dimen/dp_8"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/black"
            app:shape_radius="@dimen/dp_10"
            app:shape_strokeColor="@color/common_line_color"
            app:shape_strokeWidth="@dimen/dp_1" />

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/cancel_tv"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@id/des_et"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toLeftOf="@id/confirm_tv"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            app:shape_radius="@dimen/dp_8"
            app:shape_strokeColor="@color/common_line_color"
            app:shape_strokeWidth="@dimen/dp_1" />

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/confirm_tv"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@id/des_et"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            app:shape_radius="@dimen/dp_8"
            app:shape_solidColor="@color/gold" />

        <com.hjq.shape.layout.ShapeLinearLayout
            android:id="@+id/org_list_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/org_ll"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_18"
            android:layout_toRightOf="@id/org_text_tv"
            android:visibility="gone"
            app:shape_radius="@dimen/dp_10"
            app:shape_solidColor="@color/common_line_color">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_item_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_8"
                android:scrollbars="vertical"
                android:scrollbarThumbVertical="@color/gray"
                android:fadeScrollbars="false"
                />
        </com.hjq.shape.layout.ShapeLinearLayout>


    </com.hjq.shape.layout.ShapeRelativeLayout>

</FrameLayout>