<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_10">

    <com.hjq.shape.layout.ShapeRelativeLayout
        android:id="@+id/add_dev_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shape_radius="@dimen/dp_18"
        app:shape_solidColor="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:text="添加设备"
            android:textSize="@dimen/sp_15" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sn_text_tv"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/title_tv"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center|right"
            android:text="SN码"
            android:textSize="@dimen/sp_15"
            />

        <com.hjq.shape.layout.ShapeLinearLayout
            android:id="@+id/sn_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_alignBottom="@id/sn_text_tv"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_toRightOf="@id/sn_text_tv"
            android:orientation="horizontal"
            app:shape_radius="@dimen/dp_10"
            app:shape_strokeColor="@color/common_line_color"
            app:shape_strokeWidth="@dimen/dp_1">

            <EditText
                android:id="@+id/sn_et"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"
                android:hint="请输入SN码（必填）"
                android:paddingStart="@dimen/dp_8"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/black"
                android:background="@null"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/scan_code_iv"
                android:layout_width="@dimen/dp_38"
                android:layout_height="@dimen/dp_38"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dp_3"
                android:src="@mipmap/icon_scan_code" />
        </com.hjq.shape.layout.ShapeLinearLayout>

