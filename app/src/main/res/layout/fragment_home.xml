<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/login_top_color">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginStart="@dimen/dp_20"
            android:text="AI校园防欺凌"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <com.hjq.shape.layout.ShapeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal"
            app:shape_radius="@dimen/dp_10"
            app:shape_solidColor="@color/white"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_below="@id/title_tv"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_10"
                android:src="@mipmap/org_icon"
                />
            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/org_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingStart="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:text="AI展厅-防欺凌演示区"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                app:shape_solidColor="@color/white70" />
            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/dev_server_iv"
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_5"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_5"
                app:shape_radius="@dimen/dp_20"
                app:shape_solidColor="@color/gold" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/spread_iv"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/xl_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_10"
                />

        </com.hjq.shape.layout.ShapeLinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:text="欺凌事件"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                tools:ignore="UselessParent"
                android:layout_marginBottom="@dimen/dp_10"
                >

                <LinearLayout
                    android:id="@+id/message_ll"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical">

                    <com.hjq.shape.view.ShapeImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="center"
                        android:src="@mipmap/alarm_icon"
                        app:shape_radius="@dimen/dp_10"
                        app:shape_solidColor="@color/gray_3" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="预警消息"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="@dimen/dp_70"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical">

                    <com.hjq.shape.view.ShapeImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="center"
                        android:src="@mipmap/event"
                        app:shape_radius="@dimen/dp_10"
                        app:shape_solidColor="@color/gray_3" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="事件列表"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold"

                        />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_15"
                android:background="@color/common_line_color" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:text="设备管理"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dp_10"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical">

                    <com.hjq.shape.view.ShapeImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="center"
                        android:src="@mipmap/device_icon"
                        app:shape_radius="@dimen/dp_10"
                        app:shape_solidColor="@color/gray_3" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="设备列表"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="@dimen/dp_70"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical">

                    <com.hjq.shape.view.ShapeImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="center"
                        android:src="@mipmap/add_dev"
                        app:shape_radius="@dimen/dp_10"
                        app:shape_solidColor="@color/gray_3" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="添加设备"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold"

                        />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_15"
                android:background="@color/common_line_color" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:text="语音识别"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dp_10"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical">

                    <com.hjq.shape.view.ShapeImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="center"
                        android:src="@mipmap/keyword_icon"
                        app:shape_radius="@dimen/dp_10"
                        app:shape_solidColor="@color/gray_3" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="关键词列表"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="@dimen/dp_70"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical">

                    <com.hjq.shape.view.ShapeImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="center"
                        android:src="@mipmap/add_keyword"
                        app:shape_radius="@dimen/dp_10"
                        app:shape_solidColor="@color/gray_3" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="添加关键词"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical">

                    <com.hjq.shape.view.ShapeImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="center"
                        android:src="@mipmap/voice_copy"
                        app:shape_radius="@dimen/dp_10"
                        app:shape_solidColor="@color/gray_3" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="语音文案"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_15"
                android:background="@color/common_line_color" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:text="监控摄像头"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                tools:ignore="UselessParent"
                android:layout_marginBottom="@dimen/dp_10"
                >

                <LinearLayout
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical">

                    <com.hjq.shape.view.ShapeImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="center"
                        android:src="@mipmap/camera_list"
                        app:shape_radius="@dimen/dp_10"
                        app:shape_solidColor="@color/gray_3" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="摄像头列表"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="@dimen/dp_70"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical">

                    <com.hjq.shape.view.ShapeImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="center"
                        android:src="@mipmap/add_camera"
                        app:shape_radius="@dimen/dp_10"
                        app:shape_solidColor="@color/gray_3" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="添加摄像头"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold"

                        />

                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_15"
                android:background="@color/common_line_color" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:text="其他"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                tools:ignore="UselessParent"
                android:layout_marginBottom="@dimen/dp_10"
                >

                <LinearLayout
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical">

                    <com.hjq.shape.view.ShapeImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="center"
                        android:src="@mipmap/change_password"
                        app:shape_radius="@dimen/dp_10"
                        app:shape_solidColor="@color/gray_3" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="修改密码"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="@dimen/dp_70"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical">

                    <com.hjq.shape.view.ShapeImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="center"
                        android:src="@mipmap/app_update"
                        app:shape_radius="@dimen/dp_10"
                        app:shape_solidColor="@color/gray_3" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="应用更新"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold"

                        />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="@dimen/dp_70"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical">

                    <com.hjq.shape.view.ShapeImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="center"
                        android:src="@mipmap/logout_icon"
                        app:shape_radius="@dimen/dp_10"
                        app:shape_solidColor="@color/gray_3" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="退出登录"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold"

                        />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>