<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity">

    <com.hjq.shape.view.ShapeEditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:hint="@string/prompt_email"
        android:paddingStart="8dp"
        android:selectAllOnFocus="true"
        android:text="admin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shape_radius="15dp"
        app:shape_strokeColor="@color/gray"
        app:shape_strokeWidth="1dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"

        />

    <com.hjq.shape.view.ShapeEditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:hint="@string/prompt_password"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:paddingStart="8dp"
        android:selectAllOnFocus="true"
        android:text="123456"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:shape_radius="15dp"
        app:shape_strokeColor="@color/gray"
        app:shape_strokeWidth="1dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"

        />

    <com.hjq.shape.view.ShapeEditText
        android:id="@+id/code_tv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_below="@id/password"
        android:layout_marginTop="8dp"
        android:hint="验证码"
        android:paddingStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintWidth_percent="0.5"
        app:shape_radius="15dp"
        app:shape_strokeColor="@color/gray"
        app:shape_strokeWidth="1dp"
        android:layout_marginStart="35dp"
        />

    <ImageView
        android:id="@+id/code_image"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_below="@id/password"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/code_tv"
        android:onClick="refresh"
        android:scaleType="center"
        app:layout_constraintStart_toEndOf="@id/code_tv"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintWidth_percent="0.3"

        />


    <Button
        android:id="@+id/login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="start"
        android:layout_marginTop="48dp"
        android:enabled="false"
        android:onClick="onLogin"
        android:text="@string/action_sign_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/code_image"
        app:layout_constraintWidth_percent="0.4" />


</androidx.constraintlayout.widget.ConstraintLayout>