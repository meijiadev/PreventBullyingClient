<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardElevation="@dimen/dp_8">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:text="警报事件处理"
            android:textSize="@dimen/sp_15" />

        <com.hjq.shape.view.ShapeEditText
            android:id="@+id/remark_tv"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_90"
            android:layout_margin="@dimen/dp_8"
            android:gravity="left"
            android:hint="如：已连线设备，只是同学之间的嬉闹，并未发生欺凌事件，已警告。"
            android:padding="@dimen/dp_5"
            android:scrollbars="vertical"
            android:textSize="@dimen/sp_13"
            app:shape_radius="@dimen/dp_8"
            app:shape_strokeColor="@color/common_line_color"
            app:shape_strokeWidth="@dimen/dp_0_5" />


        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/cancel_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_10"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            app:shape_radius="@dimen/dp_10"
            app:shape_strokeColor="@color/common_line_color"
            app:shape_strokeWidth="@dimen/dp_1" />

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/process_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_weight="1"
            android:gravity="center"
            android:text="处理"
            android:textColor="@color/common_confirm_text_color"
            android:textSize="@dimen/sp_15"
            app:shape_radius="@dimen/dp_10"
            app:shape_strokeColor="@color/common_line_color"
            app:shape_strokeWidth="@dimen/dp_1" />

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/ignore_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="center"
            android:text="直接忽略"
            android:textColor="@color/common_confirm_text_color"
            android:textSize="@dimen/sp_15"
            app:shape_radius="@dimen/dp_10"
            app:shape_strokeColor="@color/common_line_color"
            app:shape_strokeWidth="@dimen/dp_1" />

    </LinearLayout>

</androidx.cardview.widget.CardView>